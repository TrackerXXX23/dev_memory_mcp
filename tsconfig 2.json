{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "rootDirs": ["src", "tests"],
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@sdk/*": ["./src/sdk/*"],
      "@modelcontextprotocol/sdk": ["./node_modules/@modelcontextprotocol/sdk/dist"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "build"]
}

{
  "name": "dev-memory-server",
  "version": "1.0.4",
  "description": "MCP server for persistent development memory across projects",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "ts-node-esm src/index.ts",
